                        </Grid>

                        <Button
                                Grid.Row="2"
                                VerticalOptions="End"
                                WidthRequest="20"
                                HeightRequest="50"
								Text="Search"
                                FontSize="16"
                                Clicked="TimKiem_Click"
                                TextColor="White"
								Style="{ StaticResource TranslucidButtonStyle }" />
                    </Grid>
                    <grial:TabItem.GestureRecognizers>
