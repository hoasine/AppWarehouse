<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="AppName.WebReportPage"
    xmlns:grial="clr-namespace:AppName.Core;assembly=AppName.Core" 
    xmlns:local="clr-namespace:AppName"
    xmlns:zxing="clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms"
	NavigationPage.HasNavigationBar="False"
    Style="{ StaticResource MainMenuOrModalBackgroundStyle }"
	Title="{ grial:Translate PageTitlePasswordRecovery }"
    BackgroundColor="White">

    <ContentPage.Content>
        <Grid RowSpacing="0" ColumnSpacing="0" BackgroundColor="Transparent">
            
            <StackLayout Orientation="Vertical">
               
            </StackLayout>
            
            <!--Dong popup-->
            <Label
				Margin="20,30"
				FontSize="24"
				TextColor="Black"
				Text="{x:Static local:GrialIconsFont.Close}"
				Style="{StaticResource FontIconFill}"
				VerticalTextAlignment="Start"
				HorizontalTextAlignment="Start">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCloseButtonClicked"></TapGestureRecognizer>
                </Label.GestureRecognizers>
            </Label>
        </Grid>
    </ContentPage.Content>
</ContentPage>
