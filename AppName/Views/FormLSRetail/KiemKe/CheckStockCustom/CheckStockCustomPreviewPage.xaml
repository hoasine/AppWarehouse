                    </Grid.ColumnDefinitions>

                    <Label
                        Margin="2,5,0,0"
                        FontAttributes="Bold"
                        TextColor="White">
                        <Label.FormattedText>
                            <FormattedString>
                                <FormattedString.Spans>
                                    <Span
                                           Text="No. "/>
                                    <Span
                                        FontSize="16"
                                             Text="{Binding DataModel.DocumentNo}"/>
                                </FormattedString.Spans>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>


                    <Label
                        Margin="0,5,0,0"
                        Grid.Column="1"
                        HorizontalTextAlignment="End"
                        FontAttributes="Bold"
                        TextColor="White">
                        <Label.FormattedText>
                            <FormattedString>
                                <FormattedString.Spans>
                                    <Span
                                           Text="{Binding ListStockLineFull.Count}"/>
                                    <Span
                                        FontSize="16"
                                             Text=" Total"/>
                                </FormattedString.Spans>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

