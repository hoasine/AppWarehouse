                </Grid>

                <BoxView
                        HeightRequest="0.2"
                        Style="{StaticResource Horizontal1ptLineStyle}"/>

                <StackLayout>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label
                                TextColor="White"
                                Text="Items"/>


                        <Label
                            Grid.Column="1"
                            TextColor="White"
                            HorizontalOptions="End"
                            HorizontalTextAlignment="End">
                            <Label.FormattedText>
                                <FormattedString>
                                    <FormattedString.Spans>
                                        <Span
                                            Text="{Binding DataModel.CountItem, Mode=TwoWay}"/>
                                        <Span
                                            Text=" PCS"/>
                                    </FormattedString.Spans>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label
                                TextColor="White"
                                Text="Scanned"/>

                        <Label
                            Grid.Column="1"
                                  FontAttributes="Bold"                     
                               TextColor="{DynamicResource WarningColor}"
                            HorizontalOptions="End"
                            HorizontalTextAlignment="End">
                            <Label.FormattedText>
                                <FormattedString>
                                    <FormattedString.Spans>
                                        <Span
                                            Text="{Binding DataModel.SumQuantity_Scan, Mode=TwoWay}"/>
                                        <Span
                                            Text=" PCS"/>
                                    </FormattedString.Spans>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>


                    </Grid>
                </StackLayout>
            </StackLayout>

            <!--<Label
                    FontAttributes="Bold"
